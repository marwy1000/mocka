{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Preferences",
  "type": "object",
  "properties": {
    "userId": { "type": "string" },
    "contact": {
      "oneOf": [
        { "$ref": "#/definitions/emailContact" },
        { "$ref": "#/definitions/phoneContact" }
      ]
    },
    "notifications": {
      "anyOf": [
        { "$ref": "#/definitions/emailNotifications" },
        { "$ref": "#/definitions/smsNotifications" }
      ]
    },
    "profile": {
      "allOf": [
        { "$ref": "#/definitions/name" },
        { "$ref": "#/definitions/ageRange" },
        { "$ref": "#/definitions/address" }
      ]
    },
    "favoriteColors": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "maxItems": 3
    },
    "optionalPart": { "$ref": "#/definitions/optionalPart" },
    "exclusiveInt": {
        "type": "integer",
        "exclusiveMinimum": 100
        },
        "smallMultipleFloat": {
        "type": "number",
        "multipleOf": 0.01
        },
        "zeroLengthArray": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 0,
        "maxItems": 0
        },
        "uniqueObjectArray": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
            "label": { "type": "string" }
            }
        },
        "uniqueItems": true,
        "minItems": 2
        }
  },
  "required": ["userId", "contact", "profile"],
  "definitions": {
    "emailContact": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" }
      },
      "required": ["email"]
    },
    "phoneContact": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string",
          "pattern": "^\\+([1-9]|[1-9][0-9]|1[0-4][0-9]|150)-\\d{3} \\d{2} \\d{2}$"
        }
      },
      "required": ["phone"]
    },
    "emailNotifications": {
      "type": "object",
      "properties": {
        "emailNotifications": { "type": "boolean" }
      },
      "required": ["emailNotifications"]
    },
    "smsNotifications": {
      "type": "object",
      "properties": {
        "smsNotifications": { "type": "boolean" }
      },
      "required": ["smsNotifications"]
    },
    "name": {
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" }
      },
      "required": ["firstName", "lastName"]
    },
    "ageRange": {
      "type": "object",
      "properties": {
        "age": { "type": "integer", "minimum": 18, "maximum": 25 }
      },
      "required": ["age"]
    },
    "address": {
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "city": { "type": "string" },
        "country": { "type": "string" }
      }
    },
    "optionalPart": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "vara": { "enum": ["active", "inactive", "pending"] },
        "profile": {
          "type": "object",
          "properties": {
            "age": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "address": { "$ref": "#/definitions/address" }
          }
        },
        "personnummer": { "type": "string" },
        "status": { "type": "string" },
        "age": { "type": "integer" },
        "birthday": { "type": "string" },
        "firstname": { "type": "string" },
        "spr√•k": { "type": "string" },
        "color": { "type": "string" },
        "role": { "type": "string" },
        "currency": { "type": "string" },
        "street": { "type": "string" },
        "parentkey": {
          "type": "object",
          "properties": {
            "businessrole": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "details": {
                  "type": "object",
                  "properties": {
                    "level": { "type": "integer" },
                    "assignedAt": { "type": "string", "format": "date-time" }
                  }
                }
              }
            },
            "NAme": { "type": "string" },
            "SomeArray": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "ID": { "type": "integer" }
                  },
                  "required": ["ID"]
                }
              ]
            },
            "Keymatch": { "type": "string", "title": "email", "description": "email" }
          }
        }
      }
    }
  }
}
